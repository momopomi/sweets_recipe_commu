<!DOCTYPE html>
<html>
  <head>
    <title>SweetsRecipeCommu</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/fdb695ff91.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
    <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <%= link_to "sweets_recipe_commu", about_path, class: 'nav-link text-white' %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
                         <!--customersログイン時のヘッダー-->
            <% if customer_signed_in? %>
              <li class="nav-item">
                ようこそ <%= link_to customers_path do %>
                <strong><%= current_customer.last_name %><%= current_customer.first_name %></strong>
                <% end %>
                 さん
              </li>
              <li class="nav-item">
                <%= link_to customer_path(current_customer.id), class: 'nav-link text-dark' do %>
                <i class="fas fa-users">マイページ</i>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to recipes_path, class: 'nav-link text-dark' do %>
                <i class="fas fa-list">レシピ一覧</i>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_recipe_path, class: 'nav-link text-dark' do %>
                <i class="fas fa-plus">新規投稿</i>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to destroy_customer_session_path, method: :delete, class: 'nav-link text-dark' do %>
                <i class="fas fa-sign-out-alt">ログアウト</i>
                <% end %>
              </li>
              <li class="mt-3">
                <%= form_with url: search_path, method: :get, local: true do |f| %>
                <li><input name="search" placeholder="search"></li>
                  <%= f.submit "検索" %>
                <% end %>
              </li>
            <!--adminログイン時のヘッダー-->
            <% elsif admin_signed_in? %>
              <li class="nav-item">
                <%= link_to admin_recipes_path, class: 'nav-link text-dark' do %>
                <i class="fas fa-cookie-bite">投稿履歴一覧</i>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to admin_customers_path, class: 'nav-link text-dark' do %>
                <i class="fas fa-users">会員一覧</i>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to admin_genres_path, class: 'nav-link text-dark' do %>
                <i class="fas fa-users">ジャンル一覧</i>
                <% end %>
                </li>
              <li class="nav-item">
                <%= link_to destroy_admin_session_path, class: 'nav-link text-dark', method: :delete do %>
                <i class="fas fa-sign-out-alt">ログアウト</i>
                <% end %>
              </li>
              <li class="mt-3">
                <%= form_with url: admin_search_path, class: 'nav-link text-dark', method: :get, local: true do |f| %>
                  <li><input name="search" placeholder="search"></li>
                  <%= f.submit "検索" %>
                <% end %>
              </li>
            <% else %>
            <!--ログイン前時のヘッダー-->
              <li class="nav-item">
                <%= link_to about_path, class: 'nav-link text-dark' do %>
                <i class="fas fa-link">About</i>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to recipes_path, class: 'nav-link text-dark' do %>
                <i class="fas fa-cookie-bite">レシピ一覧</i>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_customer_registration_path, class: 'nav-link text-dark' do %>
                <i class="fas fa-user-plus">新規登録</i>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_customer_session_path, class: 'nav-link text-dark' do %>
                <i class="fas fa-user">ログイン</i>
                <% end %>
              </li>
              <li class="mt-3">
                <%= form_with url: search_path, method: :get, local: true do |f| %>
                <li><input name="search" placeholder="search"></li>
                  <%= f.submit "検索" %>
                <% end %>
              </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main class="mb-auto">
    <%= yield %>
    </body>
  </header>
  </body>
</html>
<div class="container takasa ">
  <div class="row ">

    <h2>ジャンル一覧・追加</h2>
    <div class="col-sm-8 px-sm-0 offset-sm-1">
    <%= form_with model: @genre, url: admin_genres_path do |f| %>
      <h5>ジャンル名入力</h5>
      <%= f.text_field :name %>
      <%= f.submit "追加", class: "btn btn-primary" %>
    <% end %>
    </div>
    
    <!-- ジャンル一覧 -->
    <table class = "table table-hover">
      <thead>
        <tr class="active">
          <th>ジャンル</th>
          <th>状態</th>
          <th colspan="1"></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id) ,class: "btn btn-primary" %></td>
          <td><%= link_to "削除する", admin_genre_path(genre.id), method: :delete, class: "btn btn-danger" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%#= paginate @genres %>
  </div>
</div>
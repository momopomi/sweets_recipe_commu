<div class="container">
  <div class="row my-3">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h2>会員情報編集</h2>
    </div>
  </div>

  <%= form_with model: @customer, url: customer_path(@customer.id), method: :patch do |f| %>
  <%#= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

  
    <div class="row">
      <div class="col-2 offset-md-1"><%= f.label "お名前" %></div>
      <div class="col-1 text-right pr-0"><%= f.label "(姓)" %></div>
      <div class="col-2"><%= f.text_field :last_name, :size => "10"  %></div>
      <div class="col-1 text-right pr-0"><%= f.label "(名)" %></div>
      <div class="col-3"><%= f.text_field :first_name, :size => "10" %></div>
    </div>
    <div class="row">
      <div class="col-2 offset-md-1"><%= f.label "フリガナ" %></div>
      <div class="col-1 text-right pr-0"><%= f.label "(セイ)" %></div>
      <div class="col-2"><%= f.text_field :last_name_kana, :size => "10" %></div>
      <div class="col-1 text-right pr-0"><%= f.label "(メイ)" %></div>
      <div class="col-3"><%= f.text_field :first_name_kana, :size => "10" %></div>
    </div>
    <div class="row">
      <div class="col-3 offset-md-1"><%= f.label "メールアドレス" %></div>
      <div class="col-3"><%= f.email_field :email, :size => "25" %></div>
    </div>
    

  
    <div class="row">
      <div class="col-lg-6 px-sm-0 offset-sm-1">
        <%= f.submit "編集内容を保存", class:"btn btn-success my-4" %>
        <%= link_to "退会する", customers_check_path, class:"btn btn-danger my-4 offset-sm-1"  %>
      </div>
    </div>
  <% end %>
</div>
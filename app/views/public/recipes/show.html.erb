<div class="container takasa">
  <h2レシピ詳細</h2><br>
  <div class="row">
    <!-- 画像選択欄 -->
    <div class="col-xs-4">
      <%= image_tag @recipe.image, size: "300x300", fallback: "no_image.jpg"%><br>
    </div>

    <!-- 商品登録フォーム -->
    <div class="col-xs-8">
      <h4 style="margin-bottom: 30px;">レシピ名
        <%= @recipe.recipe_name %>
      </h4>

      <div style="display: flex;">
        <h4 style="margin: 0 30px 30px 0;">所要時間</h4>
        <div style="overflow-wrap: break-word;　word-wrap: break-word; width: 300px;">
          <%= @recipe.required_time %>
        </div>
      </div>

      <div style="display: flex;">
        <h4 style="margin: 0 30px 30px 0;">材料</h4>
        <div style="overflow-wrap: break-word;　word-wrap: break-word; width: 300px;">
          <%= @recipe.ingredient %>
        </div>
      </div>

      <div style="display: flex;">
        <h4 style="margin: 0 30px 30px 0;">工程</h4>
        <div style="overflow-wrap: break-word;　word-wrap: break-word; width: 300px;">
          <%= @recipe.process %>
        </div>
      </div>

    <div>
    <div>
      <% if comment.customer == current_customer %>
      <%= link_to "削除", recipe_comment_path(comment.recipe, comment), method: :delete %>
      <% end %>
    </div>
    

    <div>
      <%= form_with model: [@recipe, @comment] do |f| %>
        <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
        <%= f.submit "送信する" %>
      <% end %>
    </div>


      <%= button_to '編集する',edit_recipe_path(@recipe.id), method: :get ,class: "btn btn-primary ", style: "margin-left:70%;"%>
    </div>
  </div>
</div>
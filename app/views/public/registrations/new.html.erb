<div class="container mt-5 mb-5">
  <%= render "public/shared/error_messages", resource: resource %>
  <div class="row my-3">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h2>新規会員登録</h2>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="row">
      <%= f.label "お名前" %>
      <%= f.label "(姓)" %><%= f.text_field :last_name %>
      <%= f.label "(名)" %><%= f.text_field :first_name %>
    </div>
    <div class="row">
      <%= f.label "フリガナ" %>
      <%= f.label "(セイ)" %><%= f.text_field :last_name_kana %>
      <%= f.label "(メイ)" %><%= f.text_field :first_name_kana %>
    </div>
    <div class="row">
      <%= f.label "メールアドレス" %><%= f.email_field :email %>
    </div>
    <div class="row">
        <% if @minimum_password_length %>
          <%= f.label "パスワード(#{@minimum_password_length}文字以上)" %>
        <% end %>
      <div class="col-3"><%= f.password_field :password %></div>
    </div>
    <div class="row">
      <%= f.label "パスワード(確認用)" %>
      <%= f.password_field :password_confirmation %>
    </div>
    <div class="row">
      <div class="col-2 offset-md-1 mt-3 mb-5">
        <%= f.submit "新規登録", class:"col btn btn-success" %>
      </div>
    </div>
  <% end %>
  <h3>既に登録がお済みの方</h3>
      <p><%= link_to "こちら", new_customer_session_path %>から新規登録を行ってください</p>

</div>

